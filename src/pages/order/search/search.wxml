<view id="store-search">
    <view class="search-box">
        <view class="input-box">
            <input type="text" value="{{text}}" bindinput="search" confirm-type="search" bindconfirm="searchKeywords" />

            <icon type="search" size="20" class="search" />
            <icon type="clear" size="20" class="clear" hidden="{{clear}}" bindtap="clear" />
        </view>
        <view class="text" bindtap="searchKeywords">
            搜索
        </view>
    </view>
    <view class="history-box" wx:if="{{searches.length && show}}">
        <view class="keywords mx-1px-bottom" wx:for="{{searches}}">
            <view class="name" data-index="{{index}}" bindtap="searchHistory">{{item}}</view>
            <view class="clear" data-index="{{index}}" bindtap="removeSearchHistory">
                <icon type="clear" size="20" />
            </view>
        </view>
        <view class="clear-all" bindtap="clearSearchHistory">
            清空历史记录
        </view>
    </view>
    <view class="order-list" wx:if="{{!show}}">
        <view class="order-box">
            <view wx:for="{{orderList}}" wx:for-index="idx">
                <view class="order-item" data-no="{{order.order_no}}" wx:for="{{orderList[idx]}}" wx:for-item="order" bindtap="jump">
                    <view class="item-top">
                        <view class="indent mx-1px-bottom">
                            <view class="order-num">
                                订单编号：{{order.order_no}}
                            </view>
                            <view class="order-type">
                                {{typeList[order.status]}}
                            </view>
                        </view>
                    </view>
                    <view class="item-middle">
                        <view class="middle-item mx-1px-bottom" wx:for="{{order.items}}" wx:for-item="good">
                            <image src="{{good.item_meta.image}}" />
                            <view class="text">
                                <view class="names">
                                    {{good.item_name}}
                                </view>
                                <view class="model">
                                    <view class="money">
                                        ￥{{good.total_yuan}}
                                    </view>
                                    <view class="num">
                                        {{good.quantity}}件 {{good.item_meta.specs_text}}
                                    </view>
                                </view>
                            </view>
                        </view>
                    </view>
                    <view class="all-money mx-1px-bottom">
                        <view class="user">
                            <i class="iconfont icon-yonghu"></i><span>{{order.user.nick_name}}</span>
                        </view>
                        <view class="num-box">
                            {{order.count}}件  共计 <span>￥{{order.total_yuan}}</span>
                        </view>
                    </view>
                    <view class="item-bottom">
                        <view class="guide">导购 <span>{{order.shop_order.clerk.nickname}}</span></view>
                        <view class="buttom-box" wx:if="{{order.status == 1}}">
                            <view class="close" data-no="{{order.order_no}}" catchtap="close">取消订单</view>
                            <view class="code" data-no="{{order.order_no}}" catchtap="pay">扫码支付</view>
                        </view>
                        <!--<view class="button-box" wx:if="{{order.status === 3}}" data-no="{{order.order_no}}" catchtap="submit">-->
                        <!--确认收货-->
                        <!--</view>-->
                        <view class="buttom-box" wx:if="{{order.status === 6}}" data-no="{{order.order_no}}" catchtap="delete">
                            <view class="delete">删除订单</view>
                        </view>
                    </view>
                </view>
            </view>
            <view class="loadingbox" hidden="{{!showLoad}}">
                正在加载下一页数据
            </view>
            <view class="no-list" wx:if="{{!orderList[0].length && init}}">
                暂无订单数据
            </view>
