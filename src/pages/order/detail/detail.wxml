                </view>
                <view class="item-bottom">
                    <view class="guide">导购 <span>{{order.shop_order.clerk.name}}</span></view>
                    <view class="all-money">
                        {{order.count}}件，共计 <span>¥{{order.total_yuan}}</span>
                    </view>
                </view>
            </view>
        </view>
