        <view class="send"  bindtap="toTicket"  data-no="{{norder_no}}">
            打印收银单据
        </view>
    </view>


    <view class="pay-type" hidden="{{!showPay}}">
        <view class="mask" catchtouchmove="move">

        </view>
        <view class="type-box" catchtouchmove="move">
            <view class="title mx-1px-bottom">
                请选择支付方式
            </view>
            <radio-group bindchange="payType">
                <view class="pay-item mx-1px-bottom">
                    <label class="left" for="zhifubao">
                        <view class="iconfont icon-zhifubao">

                        </view>
                        <view class="info-box">
                            <view>支付宝支付</view>
                            <view class="text">使用支付宝扫描二维码支付</view>
                        </view>
                    </label>
                    <view class="right">
                        <radio value="ali_scan_pay"  id="zhifubao" />
                    </view>
                </view>
                <view class="pay-item mx-1px-bottom">
                    <label for="weixin" class="left">
                        <view class="iconfont icon-weixin">

                        </view>
                        <view class="info-box">
                            <view>微信支付</view>
                            <view class="text">使用微信扫描二维码支付</view>
                        </view>
                    </label>
                    <view class="right">
                        <radio value="wx_pub_qr" checked=""  id="weixin" />
                    </view>
                </view>
                <view class="pay-item mx-1px-bottom">
                    <label for="xianjin" class="left">
                        <view class="iconfont icon-xianjin">

                        </view>
                        <view class="info-box">
                            <view>现金支付</view>
                            <view class="text">使用现金支付</view>
                        </view>
                    </label>
                    <view class="right">
                        <radio value="cash_pay"  id="xianjin"/>
                    </view>
                </view>
                <view class="pay-item mx-1px-bottom">
                    <label for="yinlianqia" class="left">
                        <view class="iconfont icon-yinlianqia">

                        </view>
                        <view class="info-box">
                            <view>刷卡支付</view>
                            <view class="text">使用门店POS机收银</view>
                        </view>
                    </label>
                    <view class="right">
                        <radio value="pop_cash_pay"  id="yinlianqia" />
                    </view>
                </view>
            </radio-group>
            <view class="buttom-box">
                <view class="close mx-1px-right" bindtap="close">
                    取消
                </view>
                <view class="submit">
                    确定
                </view>
            </view>
        </view>
    </view>
</view>