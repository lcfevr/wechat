        <view class="order-item">
            <view class="title">
                备注
            </view>
            <view class="order-info">
                {{order.note || order.message || '暂无备注'}}
            </view>
        </view>
        <view class="order-detail-info">
            <view class="item">
                <view class="name">
                    商品件数：
                </view>
                <view class="num">
                    {{order.count}}件
                </view>
            </view>
            <view class="item">
                <view class="name">
                    商品金额：
                </view>
                <view class="num">
                    ￥{{order.items_total_yuan}}
                </view>
            </view>
            <view class="item">
                <view class="name">
                    积分抵扣：
                </view>
                <view class="num">
                    {{order.adjustment_point}}积分
                </view>
            </view>
            <view class="item">
                <view class="name">
                    优惠抵扣：
                </view>
                <view class="num">
                    {{order.adjustments_total_yuan}}
                </view>
            </view>
            <view class="item">
                <view class="name">
                    运费：
                </view>
                <view class="num">
                    {{order.payable_freight}}
                </view>
            </view>
            <view class="item">
                <view class="name big">
                    实付金额：
                </view>
                <view class="num big-money">
                    ￥{{order.total_yuan}}
                </view>
            </view>
        </view>
        <view class="order-item" wx:if="{{order.status == 2 || order.status == 3 || order.status == 4 || order.status == 5}}">
            <view class="title">
                <span wx:if="{{!order.shop_order.images.length}}">上传小票</span>
                <span wx:else>查看小票</span>
            </view>
            <view class="down-box">
                <view class="img-box" wx:if="{{img.length}}">
                    <view class="img-item" wx:for="{{img}}">
                        <image src="{{item}}" catchtap="preview" />
                        <icon type="clear" data-index="{{index}}" size="25"  catchtap="delete" wx:if="{{!order.shop_order.images.length}}" />
                    </view>
                </view>
                <view class="down" bindtap="upload" wx:if="{{img.length < 3 && !order.shop_order.images.length}}">
                   <i class="iconfont icon-shangchuan"></i>
                </view>
            </view>
        </view>
    </view>
    <view class="button-type" wx:if="{{order.status == 2 || order.status == 3 || order.status == 4 || order.status == 5}}">
