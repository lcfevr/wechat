page {
  background: #ffffff;
}
.ticket {
  padding: 0 20px;
  padding-bottom: 50px;
}
.ticket .btn {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 50px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.ticket .btn .btn-child {
  flex: 1;
  height: 100%;
  font-size: 16px;
  text-align: center;
  line-height: 50px;
}
.ticket .btn .w {
  background: #1aad19;
  color: #ffffff;
}
.ticket .btn .g {
  background: #ffffff;
  color: #1aad19;
}
.ticket .logo {
  position: relative;
  padding: 40px 0;
}
.ticket .logo image {
  transform: translate(-50%, 0);
  margin-left: 40%;
  height: 150px;
  width: 150px;
  object-fit: cover;
  object-position: center;
}
.ticket .storeInfo li {
  line-height: 25px;
  font-size: 14px;
  display: block;
}
.ticket .order_detail {
  padding-top: 20px;
  border-top: 1px solid #979797;
}
.ticket .order_detail li {
  display: block;
  line-height: 25px;
  font-size: 14px;
}
.ticket .order_detail li:nth-of-type(3) {
  display: flex;
  justify-content: space-between;
}
.ticket .goods_list {
  font-size: 14px;
  line-height: 25px;
  margin-top: 10px;
  border-bottom: 1px solid #979797;
}
.ticket .goods_list ul {
  display: block;
  margin: 20px 0;
}
.ticket .goods_list ul li {
  display: inline-block;
  width: 100%;
}
.ticket .goods_list ul li:nth-of-type(1) {
  display: flex;
  justify-content: space-between;
}
.ticket .count_all {
  padding-bottom: 10px;
  border-bottom: 1px solid #979797;
}
.ticket .count_all .count {
  display: flex;
  justify-content: space-between;
  line-height: 40px;
}
.ticket .count_all .money {
  line-height: 25px;
}
.ticket .count_all .money li {
  display: flex;
  justify-content: space-between;
}
.ticket .total {
  padding: 30px 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.ticket .total span:nth-of-type(1) {
  font-size: 26px;
  font-weight: bold;
}
.ticket .payType {
  margin: 40px 0;
}
.ticket .payType ul li {
  line-height: 30px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.ticket .payType ul li span {
  display: inline-block;
  align-self: center;
  flex: 1;
}
.ticket .payType ul li span:nth-of-type(2) {
  text-align: center;
}
.ticket .payType ul li span:nth-of-type(3) {
  text-align: right;
}
.ticket .score {
  display: flex;
  justify-content: space-between;
}
.ticket .split {
  margin-top: 50px;
  margin-bottom: 10px;
  text-align: center;
}
.ticket .explain + view {
  width: 100%;
  text-align: center;
  font-size: 16px;
  line-height: 25px;
}
.ticket .explain li {
  line-height: 25px;
  display: block;
}
.ticket .wechat_logo {
  position: relative;
  margin-left: 50%;
  transform: translate(-50%, 0);
  width: 100px;
  height: 100px;
}
